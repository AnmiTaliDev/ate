<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    
    <!-- Assembly Info -->
    <AssemblyName>ate</AssemblyName>
    <RootNamespace>ATE</RootNamespace>
    <Version>1.0.0</Version>
    <Authors>AnmiTaliDev</Authors>
    <Product>AnmiTali Encrypter (ATE)</Product>
    <Description>Linux file encryption utility</Description>
    <Copyright>Copyright © 2025 AnmiTaliDev</Copyright>
    <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
    
    <!-- Linux Only Build Configuration -->
    <RuntimeIdentifier>linux-x64</RuntimeIdentifier>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    
    <!-- Build Info -->
    <BuildUser>AnmiTaliDev</BuildUser>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Portable.BouncyCastle" Version="1.9.0" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
  </ItemGroup>

</Project>